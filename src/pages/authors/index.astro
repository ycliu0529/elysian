---
// src/pages/authors/index.astro
import baselayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

// 1. 抓取所有 blog 文章 [cite: 2025-12-21]
const allposts = await getCollection("blog");

// 2. 提取所有作者並計算其文章數量 [cite: 2025-12-21]
const authorcounts = allposts.reduce((acc, post) => {
  const authorname = post.data.author;
  if (authorname) {
    const normalizedauthor = authorname.toLowerCase();
    acc[normalizedauthor] = (acc[normalizedauthor] || 0) + 1;
  }
  return acc;
}, {});

// 3. 取得作者清單並排序 [cite: 2025-12-21]
const sortedauthors = Object.keys(authorcounts).sort();

const pagetitle = "By Author"; // 網頁文字首字母大寫 [cite: 2025-12-21]
---

<baselayout title={pagetitle}>
  <section class="archive-author-section">
    <header class="section-header">
      <h1>{pagetitle}</h1>
      <p>discover content created by our diverse team of contributors.</p>
    </header>

    <div class="author-grid">
      {sortedauthors.length > 0 ? (
        sortedauthors.map((author) => (
          <a href={`/authors/${author}/`} class="author-card">
            <div class="author-info">
              <span class="author-name">{author}</span>
              <span class="post-count">{authorcounts[author]} posts</span>
            </div>
          </a>
        ))
      ) : (
        <p class="no-posts">no authors found yet.</p>
      )}
    </div>
  </section>
</baselayout>

<style>
  /* 程式碼維持全小寫規範 [cite: 2025-12-21] */
  .archive-author-section {
    padding: 80px 0;
    max-width: 900px;
    margin: 0 auto;
    min-height: 60vh;
  }
  .section-header {
    margin-bottom: 60px;
    border-bottom: 1px solid var(--text-color-20);
    padding-bottom: 20px;
  }
  h1 {
    font-size: 3.5rem;
    font-weight: 700;
  }
  .author-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 20px;
  }
  .author-card {
    display: flex;
    flex-direction: column;
    padding: 30px;
    background-color: var(--text-color-5);
    border: 1px solid var(--text-color-10);
    text-decoration: none;
    color: var(--text-color);
    transition: transform 0.2s ease, background-color 0.2s ease;
  }
  .author-card:hover {
    transform: translateY(-5px);
    background-color: var(--text-color-10);
    border-color: var(--text-color-20);
  }
  .author-name {
    display: block;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 5px;
    text-transform: capitalize;
  }
  .post-count {
    font-size: 0.9rem;
    color: var(--text-color-60);
  }
  .no-posts {
    font-style: italic;
    color: var(--text-color-60);
  }
</style>